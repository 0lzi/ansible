global:
  checkNewVersion: false
  sendAnonymousUsage: false

{% if traefik.logs %}
log:
  level: {{ traefik.logs.level | upper }}
  filePath: "/var/log/traefik/traefik.log"
  format: json

accessLog:
  filePath: "/var/log/traefik/access.log"
  format: json
  filters:
    statusCodes:
      - "200"
      - "300-302"
    retryAttempts: true
    minDuration: "10ms"
  fields:
    defaultMode: keep
    headers:
      defaultMode: keep
      names:
        Authorization: drop
{% endif %}

api:
  dashboard: true
  insecure: false

{% if traefik.metrics.prometheus %}
metrics:
  prometheus: true
{% endif %}

entryPoints:
  http:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
          permanent: true
  ssh:
    address: ":2222"

  websecure:
    address: :443
    http:
      tls: true
    transport:
      respondingTimeouts:
        readTimeout: 600s
        idleTimeout: 600s
        writeTimeout: 600s

certificatesResolvers:
  cloudflare:
    acme:
      email: {{ cf_email }}
      storage: /letsencrypt/acme.json
      dnsChallenge:
        provider: cloudflare
        delayBeforeCheck: 0
        resolvers:
        - "1.1.1.1:53"
        - "8.8.8.8:53"

providers:
  # Enable Docker configuration backend
  docker:
    exposedByDefault: false
  consul:
    endpoints:
      - "http://consul-0.0lzi.com:8500"
